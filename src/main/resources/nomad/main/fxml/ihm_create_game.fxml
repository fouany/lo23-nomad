                        <HBox prefHeight="50.0" prefWidth="256.0">
                           <children>
                              <CheckBox fx:id="red" mnemonicParsing="false" onAction="#onCheckColor" style="-fx-font-family: 'Poppins';" text="RED" />
                              <Separator orientation="VERTICAL" prefHeight="41.0" prefWidth="35.0" visible="false" />
                              <CheckBox fx:id="white" mnemonicParsing="false" onAction="#onCheckColor" style="-fx-font-family: 'Poppins';" text="WHITE" />
                              <Separator orientation="VERTICAL" prefHeight="41.0" prefWidth="35.0" visible="false" />
                              <CheckBox fx:id="random" mnemonicParsing="false" onAction="#onCheckColor" style="-fx-font-family: 'Poppins';" text="RANDOM" />
                           </children>
                        </HBox>
                        <CheckBox fx:id="allowViewers" mnemonicParsing="false" onAction="#onCheckAllow" style="-fx-font-family: 'Poppins'; -fx-font-style: italic;" text="Allow viewers" />
