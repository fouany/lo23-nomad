                        <CheckBox fx:id="allowViewersChat" disable="true" mnemonicParsing="false" style="-fx-font-family: 'Poppins'; -fx-font-style: italic;" text="Allow viewers to chat" />
                        <Separator prefHeight="25.0" prefWidth="256.0" visible="false" />
                        <Button mnemonicParsing="false" onMouseClicked="#onClickCreateGame" prefHeight="30.0" prefWidth="264.0" style="-fx-font-family: 'Poppins';" styleClass="main-bg-blue" text="Create game" />
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
